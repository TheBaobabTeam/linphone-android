<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <RelativeLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/background_top_bar" >

	       <TextView
	           android:id="@+id/back"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_alignParentBottom="true"
	           android:layout_alignParentLeft="true"
	           android:layout_alignParentStart="true"
	           android:layout_alignParentTop="true"
	           android:background="@drawable/group_chat_back" />

	       <TextView
	           android:id="@+id/next"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_alignBottom="@+id/back"
	           android:layout_alignParentEnd="true"
	           android:layout_alignParentRight="true"
	           android:layout_alignParentTop="true"
	           android:layout_alignParentBottom="true"
	           android:background="@drawable/group_chat_next" />

	       <TextView
	           android:id="@+id/newGroup"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_centerHorizontal="true"
	           android:layout_centerVertical="true"
	           android:gravity="center"
	           android:text="@string/newGroup"
	           android:textColor="@color/text_switch_selected"
	           android:textSize="20sp"
	           android:textStyle="normal|bold" />
        
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:orientation="vertical" >

        <LinearLayout
        android:id="@+id/imageAndText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
    <ImageView
        android:id="@+id/GroupIcon"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/groupchat_icon"
        android:src="@drawable/picture" 
        android:clickable="true" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="@string/description"
        android:textColor="@color/text_button"
        android:textSize="17dp"
        android:layout_marginTop="30dp" />

    </LinearLayout>

        <EditText
            android:id="@+id/groupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:hint="@string/groupchat_name"
            android:textColor="@color/edittextcolor" >

            <requestFocus />
        </EditText>

	</LinearLayout>

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_top_bar"
        android:orientation="horizontal" >

            <TextView
                android:id="@+id/aboutLinphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
        		android:layout_alignParentTop="true"
                android:background="@drawable/group_chat_info" />

	        <TextView
	            android:id="@+id/helpLinphone"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentEnd="true"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentTop="true"
	            android:background="@drawable/group_chat_help" />

    </RelativeLayout>

</RelativeLayout>