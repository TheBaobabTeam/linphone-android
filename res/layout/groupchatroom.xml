        <LinearLayout
            android:id="@+id/image_attach"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:clickable="true" >

            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_attach_file_white_18dp"
                android:clickable="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/image_more"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginRight="39dp"
            android:clickable="true" >

            <TextView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_more_vert_white_18dp"
                android:clickable="true" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/groupfooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
	    android:layout_alignParentBottom="true"
        android:background="@drawable/chat_background"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/groupmessageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/groupsendMessage"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignBottom="@+id/sendPicture"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/group_chat_send_message"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@drawable/text_color" />

            <TextView
                android:id="@+id/groupsendPicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:drawableTop="@drawable/chat_send_picture"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/button_send_picture"
                android:textColor="@drawable/text_color" />

            <EditText
                android:id="@+id/groupmessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@id/groupsendMessage"
                android:layout_toRightOf="@id/groupsendPicture"
                android:background="@drawable/chat_field_background"
                android:ems="10"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:textColor="@android:color/black"
                android:textCursorDrawable="@null" >

                <requestFocus />
            </EditText>

          <!--  <TextView
                android:id="@+id/sendAudio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/groupsendPicture"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/groupmessage"
                android:background="@drawable/group_chat_send_default" /> -->
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/groupuploadLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/groupcancelUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_description_cancel"
                android:padding="20dp"
                android:src="@drawable/list_delete" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/groupcancelUpload"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="20dp" >

                <TextView
                    android:id="@+id/progressBarText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/uploading_image"
                    android:textColor="@android:color/black" />

                <ProgressBar
                    android:id="@+id/groupprogressbar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingTop="2dp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/groupchatMessageList"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_above="@+id/groupfooter"
        android:layout_below="@+id/grouptopbar"
        android:cacheColorHint="@color/transparent"
        android:divider="@android:color/transparent"
        android:dividerHeight="1dp"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll" />

